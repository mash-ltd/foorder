= content_for :new_session do
  = form_for :user, :url => new_user_session_path, :html => {:class => "form-inline navbar-form pull-right"} do |f|
    = f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "input-medium"
    = f.password_field :password, :class => "input-medium", :placeholder => "Password"
    = f.submit "Sign in", :class => "btn btn-primary"
    - if devise_mapping.rememberable?
      <br/>
      .pull-right
        = f.check_box :remember_me
        = f.label :remember_me

= content_for :new_user do
  .row
    .span2.offset1
      %h3 Sign up
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.label :username
        = f.text_field :username
        = f.label :first_name
        = f.text_field :first_name
        = f.label :last_name
        = f.text_field :last_name
        = f.label :email
        = f.email_field :email
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        <br/><br/>
        = f.submit "Sign up", :class => "btn btn-primary"
        <br/>
        = render "devise/shared/links"